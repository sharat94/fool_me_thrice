<p id="notice"><%= notice %></p>

<h1>Verbs</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Topic</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @verbs.each do |verb| %>
      <tr>
        <td><%= verb.id %></td>
        <td><%= verb.topic.id %></td>
        <td><%= verb.name %></td>
        <td><%= link_to 'Show', verb %></td>
        <td><%= link_to 'Edit', edit_verb_path(verb) %></td>
        <td><%= link_to 'Destroy', verb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Verb', new_verb_path %>

<h2>Import Verbs</h2>

<%= form_tag import_verbs_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>